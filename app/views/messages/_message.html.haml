.message-list{data: {message: {id: message.id}}}
  .message-lists-header
    .message-lists-name
      = message.user.name
    .message-lists-datetime
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages
    - if message.content.present?
      %p.messages__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?